#!/bin/bash
#
#########################################
##  Re-add dotfiles to chezmoi source  ##
#########################################
#
# get current directory and re-add dots
orig_dir=$(pwd)

chezmoi re-add

# move to the chezmoi directory for git status
cd $DOTS_DIR
echo 'chezmoi status:'
git status -s

if [ $orig_dir != $DOTS_DIR ]; then
 echo "...you're not in the dots directory yet :)"
fi

