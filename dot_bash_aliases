# workflow apps
alias vi='nvim'
alias vim='nvim'
# navigation and listing
alias la='ls -la'
alias ..='cd ..'
alias ...='cd ../..'
alias ..='cd ..'


# dotfiles management
alias cm='chezmoi'
alias cma='chezmoi add'
alias cmc='chezmoi cd'
alias cme='chezmoi edit && chezmoi apply'

# package updates
alias uu='sudo dnf upgrade --refresh -y'
