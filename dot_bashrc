# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific environment
if ! [[ "$PATH" =~ "$HOME/.local/bin:$HOME/bin:" ]]
then
    PATH="$HOME/.local/bin:$HOME/bin:$PATH"
fi
export PATH

# Uncomment the following line if you don't like systemctl's auto-paging feature:
# export SYSTEMD_PAGER=

# Limit history scope
HISTFILESIZE=100


# User specific aliases and functions
if [ -d ~/.bashrc.d ]; then
	for rc in ~/.bashrc.d/*; do
		if [ -f "$rc" ]; then
			. "$rc"
		fi
	done
fi

unset rc

if [ -f ~/.bash_aliases ]; then
	. ~/.bash_aliases
fi

## XDG Base Directories
export XDG_CONFIG_HOME="$HOME/.config"

## zsh will be XDG-compliant so help me god
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export VIMDIR="$XDG_CONFIG_HOME/nvim"

# Editor
export EDITOR="nvim"
export VISUAL="nvim"

## Terminal
export TERM="xterm-256color"

## My environment setup :)
export SXHKD_SHELL="sh"
export STARSHIP_CONFIG=~/.config/starship/starship.toml

export WALLPAPER_DIR="$HOME/.local/share/wallpapers"

export NOTEBOOK_DIR="$HOME/ari-common/ari_yelling"
export DOTS_DIR="$HOME/.local/share/chezmoi"

## Starship Prompt config
export STARSHIP_CONFIG=~/.config/starship/starship.toml
eval "$(starship init bash)"

